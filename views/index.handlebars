<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-sm-4">

      </div>
      <div class="col-sm-4">
        <h1 class="text-center">Burgers!</h1>
        <img class="rounded mx-auto d-block" height="300px" width="100%" src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4114.png">
      </div>
      <div class="col-sm-4">

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">

  <h2>Burgers I want to eat.</h2>
      <ul>
        {{#each cats}}
        {{#unless sleepy}}
        <li>
	{{name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="true">
		Eat It
	</button>

	<button class="delete-cat" data-id="{{this.id}}">Delete</button>
</li>

        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">

      <h2>Devoured Burgers</h2>

      <ul>
        {{#each cats}}
        {{#if sleepy}}
       <li>
	{{name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="false">
	Buy It
	</button>

	<button class="delete-cat" data-id="{{this.id}}">Delete</button>
</li>

        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="sleepy">Eaten?</label><br>
          <input type="radio" name="sleepy" value="1" checked> Devoured<br>
          <input type="radio" name="sleepy" value="0"> To Eat
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>